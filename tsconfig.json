{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "types": ["node", "offscreencanvas"],
    "rootDir": "lib",
    "strict": true,
    "target": "es5",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["lib/**/*"],
  "exclude": ["lib/**/*.stories.tsx"]
}
